{
    "$schema": "https://biomejs.dev/schemas/2.3.8/schema.json",
    "html": {
        "experimentalFullSupportEnabled": true,
        "formatter": {
            "enabled": true,
            "indentScriptAndStyle": true
        }
    },
    "assist": {
        "actions": {
            "source": {
                "recommended": true
            }
        },
        "enabled": true
    },
    "files": {
        "ignoreUnknown": false
    },
    "formatter": {
        "bracketSameLine": true,
        "enabled": true,
        "indentStyle": "space",
        "indentWidth": 4,
        "lineWidth": 120
    },
    "javascript": {
        "formatter": {
            "indentWidth": 4,
            "indentStyle": "space",
            "quoteStyle": "single",
            "trailingCommas": "none"
        }
    },
    "css": {
        "formatter": {
            "enabled": true,
            "indentWidth": 4,
            "quoteStyle": "single"
        },
        "parser": {
            "tailwindDirectives": true
        }
    },
    "linter": {
        "domains": {
            "vue": "recommended"
        },
        "enabled": true,
        "rules": {
            "recommended": true,
            "style": {
                "noNonNullAssertion": "off",
                "useTemplate": "off"
            },
            "suspicious": {
                "noExplicitAny": "off"
            }
        }
    },
    "overrides": [
        {
            "includes": ["**/*.vue"],
            "linter": {
                "rules": {
                    "style": {
                        "useConst": "off",
                        "useImportType": "off"
                    },
                    "correctness": {
                        "noUnusedVariables": "off",
                        "noUnusedImports": "off"
                    }
                }
            }
        },
        {
            "includes": ["**/src/style.css"],
            "linter": {
                "rules": {
                    "correctness": {
                        "noUnknownProperty": "off"
                    }
                }
            }
        }
    ],
    "vcs": {
        "clientKind": "git",
        "enabled": true,
        "useIgnoreFile": true
    }
}
